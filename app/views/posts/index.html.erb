<h1>Articles</h1>

<% if notice %>
  <div class="card green lighten-1">
    <div class="card-content white-text">
      <%= notice %>
    </div>
  </div>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <a href="<%= post_path(post) %>"><%= post.name + ', ' + post.category.name %></a>
      - <a href="<%= edit_post_path(post) %>">Editer</a>
      - <%= link_to 'Supprimer', post, method: :delete, data: {confirm: 'Êtes vous sûr de bien vouloir supprimer ce post ?'} %>
    </li>
  <% end %>
</ul>

<p>
  <a href="<%= new_post_path %>" class="btn-floating right btn-large blue waves-effect waves-light"><i class="material-icons">add</i></a>
</p>
